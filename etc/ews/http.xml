<?xml version="1.0" encoding="UTF-8"?>
<tornasauce version="1.0">
    <bind ip="0.0.0.0/0" />
    <modules load="http10" />
    <domain name="bosqueviejo.net" alias="www.bosqueviejo.net,tornasauce.bosqueviejo.net">
        <location url="/" path="/var/www/bosqueviejo">
            <index auto="off" order="index.php,index.html" />
            <grants>
                <allow from="all" />
            </grants>
        </location>
        <location url="/doc" path="/usr/share/doc">
            <index auto="on" />
            <grants order="deny,allow">
                <allow from="127.0.0.1/32" />
                <deny from="all" />
            </grants>
        </location>
    </domain>
</tornasauce>
