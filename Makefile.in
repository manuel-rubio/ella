export MODULES
export INC
export prefix
export exec_prefix
export CFLAGS
export LIBS_CONSOLE
export LIBS_SERVER
export LIBS_COMMON

CC = @CC@
CFLAGS = @CFLAGS@ @dependencias_CFLAGS@
LIBS_CONSOLE = @LIBS_CONSOLE@ @dependencias_LIBS@
LIBS_SERVER = -ldl -pthread @LIBS_SERVER@ @dependencias_LIBS@
LIBS_COMMON = @LIBS_COMMON@ @dependencias_LIBS@
prefix = @prefix@
exec_prefix = @exec_prefix@

MODULES = @MODULES@

INC = ../include/configurator.h \
      ../include/config.h \
      ../include/connector.h \
      ../include/header.h \
      ../include/logger.h \
      ../include/memory.h \
      ../include/string.h

all: ewsd

ewsd: common main modules main/ewsd.c
	$(MAKE) -C common
	$(MAKE) -C main
	$(MAKE) -C modules

ews: common main modules main/ews.c
	$(MAKE) -C common
	$(MAKE) -C main
	$(MAKE) -C modules

clean:
	$(MAKE) -C common clean
	$(MAKE) -C main clean
	$(MAKE) -C modules clean

distclean: clean
	rm -f config.* Makefile common/Makefile main/Makefile modules/Makefile include/config.h include/config.in include/*~

maintainer-clean: develclean

develclean: distclean
	rm -rf aclocal* autom4* configure

dist: clean
	svn2cl -i --group-by-day
	cd .. && tar cz --exclude=.svn -f @PACKAGE_NAME@-@PACKAGE_VERSION@-`date +%Y%m%d`.tar.gz ella-src/{etc,main,common,modules,AUTHORS,ChangeLog,COPYING,include,INSTALL,configure,Makefile.in,README}
	$(RM) ChangeLog

install: all
	$(MAKE) -C common install
	$(MAKE) -C main install
	$(MAKE) -C modules install
	[ -d @sysconfdir@/ews ] || mkdir -p @sysconfdir@/ews
	[ -f @sysconfdir@/ews/http.ini ] || cp etc/ews/http.ini @sysconfdir@/ews
	[ -d @localstatedir@/run/ews ] || mkdir -p @localstatedir@/run/ews
	[ -d @datadir@/ews/html ] || mkdir -p @datadir@/ews/html
	cp share/* @datadir@/ews/html
	[ -f /etc/debian_version ] && cp debian/ewsd /etc/init.d

uninstall:
	$(MAKE) -C common uninstall
	$(MAKE) -C main uninstall
	$(MAKE) -C modules uninstall
	[ -d @sysconfdir@/ews ] && $(RM) -r @sysconfdir@/ews
	[ -d @localstatedir@/run/ews ] && $(RM) -r @localstatedir@/run/ews
	[ -d @datadir@/ews/html ] && $(RM) -r @datadir@/ews
